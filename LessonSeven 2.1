package task.two.level.one;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int[] a = new int[] { 7, 3, 8, 16, 10, 4 };
		System.out.println(arr(a));
	}

	public static String arr(int[] b) {
		String text = "[";

		for (int i = 0; i < b.length; i++) {
			if (i < (b.length - 1)) {
				text = text + " " + b[i] + ",";
			} else {
				text = text + " " + b[i];
			}
		}
		return text + " ]";
	}

}
