package task.one.l.two;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);

		System.out.println("Введите высоту фигуры");
		int h = sc.nextInt();

		for (int i = 1; i < h * 2; i++) {
			for (int j = 1; j<=h; j++) {
				if (i <= h && j <= i) {  
				System.out.print("*");
			} else if (i > h && (j + i) <= h*2) {
				System.out.print("*");
			}
			}
			System.out.println();
	}
}
}
